{
	"name": "applesauce-content",
	"version": "2.3.0",
	"description": "Unified plugins for processing event content",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"watch:build": "tsc --watch > /dev/null",
		"test": "vitest run --passWithNoTests",
		"watch:test": "vitest"
	},
	"keywords": ["nostr", "applesauce"],
	"author": "hzrd149",
	"license": "MIT",
	"files": ["dist", "applesauce"],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./helpers": {
			"import": "./dist/helpers/index.js",
			"require": "./dist/helpers/index.js",
			"types": "./dist/helpers/index.d.ts"
		},
		"./helpers/*": {
			"import": "./dist/helpers/*.js",
			"require": "./dist/helpers/*.js",
			"types": "./dist/helpers/*.d.ts"
		},
		"./nast": {
			"import": "./dist/nast/index.js",
			"require": "./dist/nast/index.js",
			"types": "./dist/nast/index.d.ts"
		},
		"./markdown": {
			"import": "./dist/markdown/index.js",
			"require": "./dist/markdown/index.js",
			"types": "./dist/markdown/index.d.ts"
		},
		"./text": {
			"import": "./dist/text/index.js",
			"require": "./dist/text/index.js",
			"types": "./dist/text/index.d.ts"
		}
	},
	"dependencies": {
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"@types/unist": "^3.0.3",
		"applesauce-core": "link:../core",
		"mdast-util-find-and-replace": "^3.0.2",
		"nostr-tools": "^2.13",
		"remark": "^15.0.1",
		"remark-parse": "^11.0.0",
		"unified": "^11.0.5",
		"unist-util-visit-parents": "^6.0.1"
	},
	"devDependencies": {
		"typescript": "^5.8.3",
		"applesauce-signers": "link:../signers",
		"vitest": "^3.2.3"
	},
	"funding": {
		"type": "lightning",
		"url": "lightning:nostrudel@geyser.fund"
	}
}
